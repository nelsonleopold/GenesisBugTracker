@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"] - The Bug Tracker</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="A fully featured admin theme which can be used to build CRM, CMS, etc.">
    <meta name="keywords" content="bootstrap 4, premium, marketing, multipurpose">
    <meta name="author" content="Coderthemes">
    <!-- favicon -->
    <link rel="shortcut icon" href="~/img/favicon.ico">
    <!-- css -->
    <link href="~/css/icons.css" rel="stylesheet" type="text/css">
    <link href="~/css/style.css" rel="stylesheet" type="text/css">
</head>
<body>
    <!-- NAVBAR START -->
    <nav class="navbar navbar-expand-lg defaultscroll navbar-sticky navbar-light border-0 shadow-none" style="z-index: 1000;">
        <div class="container">
            <!-- logo -->
            <a href="index.html" class="logo">
                <img src="~img/logo.png" alt="" class="logo-light" height="22">
                <img src="~/img/logo.png" alt="" class="logo-dark" height="22">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fe-menu"></i>
            </button>
            <!-- menus -->
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <!-- right menu -->
                <ul class="navbar-nav ml-auto align-items-center">
                    <li class="nav-item">
                        <a class="nav-link" target="_blank" href="https://github.com/nelsonleopold">Check out my Github!</a>
                    </li>
                    <li class="nav-item">
                        <div class="nav-link">
                            <a asp-page="/Account/Login" asp-area="Identity" class="btn btn-primary"><i class="fe-shopping-bag mr-1"></i> Try it Now</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- NAVBAR END -->
    <!-- START HERO -->
    <section class="position-relative overflow-hidden m-t-80">
        <div class="overlay-1"></div>
        <div class="container pt-10 pb-6">
            <div class="row align-items-center">
                <div class="col-md-5">
                    <div class="pr-lg-5">
                        <div class="badge badge-primary f-14">Version 0.2.0</div>
                        <h2 class="mb-4 mt-3">
                            A Complete Issue Tracker
                        </h2>
                        <p class="mb-4 pt-2 f-16">
                            BugTracker is a fully featured issue tracker and comes with well designed UI elements,
                            role-based security, project and ticket histories, notifications, an admin dashboard, and more.
                        </p>
                        <a asp-page="/Account/Login" asp-area="Identity" class="btn btn-primary btn-lg"><i class="fe-eye mr-1"></i> Try it now <i class="fe-arrow-right ml-1"></i></a>
                    </div>
                </div>
                <div class="col-md-7">
                    <img src="~/img/demo/bugtrackerDashboard.png" class="img-fluid shadow-lg animate">
                </div>
            </div>
        </div>
    </section>
    <!-- END HERO -->
    <!-- START FEATURES -->
    <section class="section pb-6" id="demos">
        <div class="container pb-2">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-center">
                        <h3>Track multiple projects across your company</h3>
                        <p class="text-muted mt-3 mb-5">
                            Companies create projects. Projects are made up of tickets. <br />
                            Users are managed with roles, each with their own login and permissions.
                        </p>
                        <p class="f-24"><i class="fe-minus text-primary"></i><i class="fe-git-commit text-primary"></i><i class="fe-minus text-primary"></i></p>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">

                <div class="col-lg-4 my-3">
                    <div class="demo-box text-center">
                        <img src="~/img/demo/bugtrackerLoginPage.png" alt="demo-img" class="img-fluid shadow-lg rounded animate">
                    </div>
                    <h5 class="my-3 f-17 text-center">Login Page</h5>
                </div>

                <div class="col-lg-4 my-3">
                    <div class="demo-box text-center">
                        <img src="~/img/demo/bugtrackerAllProjects.png" alt="demo-img" class="img-fluid shadow-lg rounded animate">
                    </div>
                    <h5 class="my-3 f-17 text-center">All Projects</h5>
                </div>

                <div class="col-lg-4 my-3">
                    <div class="demo-box text-center">
                            <img src="~/img/demo/bugtrackerUnassignedTickets.png" alt="demo-img" class="img-fluid shadow-lg rounded animate">
                    </div>
                    <h5 class="my-3 f-17 text-center">Unassigned Tickets</h5>
                </div>
            </div>

            <div class="row mt-5">
                <div class="col-lg-12">
                    <div class="text-center">
                        <h5 class="mb-0">-----------</h5>
                        <p class="f-24"><i class="fe-minus text-primary"></i><i class="fe-git-commit text-primary"></i><i class="fe-minus text-primary"></i></p>
                    </div>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-lg-4 my-3">
                    <div class="demo-box text-center">
                        <img src="~/img/demo/bugtrackerProjectDetails.png" alt="demo-img" class="img-fluid shadow-lg rounded animate">
                    </div>
                    <h5 class="my-3 f-17 text-center">Project Details</h5>
                </div>

                <div class="col-lg-4 my-3">
                    <div class="demo-box text-center">
                        <img src="~/img/demo/bugtrackerTicketDetails.png" alt="demo-img" class="img-fluid shadow-lg rounded animate">
                    </div>
                    <h5 class="my-3 f-17 text-center">Ticket Details</h5>
                </div>
            </div>
        </div>
    </section>

   
    <!-- START CTA -->
    <section class="section bg-dark section-footer-1">
        <div class="container pt-10 pb-5">
            <div class="row">
                <div class="col-md-6">
                    <img src="~/img/logo-light.png" class="logo-light" alt="" height="24">
                    
                </div>
                <div class="col-md-3 offset-md-3">
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-md-12">
                    <div class="text-center">
                        <p class="text-muted mb-0"><span>&copy; 2022 &nbsp;</span>nelson the dev | nelson.thedev@gmail.com</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- END CTA -->
    <!-- bundle -->
    <script src="~/js/app.min.js"></script>
</body>
</html>
